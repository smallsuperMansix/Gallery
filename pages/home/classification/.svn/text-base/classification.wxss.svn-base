/* pages/home/classification/classification.wxss */
@import "../../public/classItem/classItem.wxss";

.sortview {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 15rpx;
  background-color: #fff;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}

.errs {
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.tips {
  font-size: 28rpx;
  text-align: center;
  padding: 50rpx;
  color: #ccc;
}

.tipsimage {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.tipstext {
  vertical-align: middle;
}
