/* 导入模板wxss */
@import "../../public/log/log.wxss";
/* pages/user/about/about.wxss */
.base {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.img {
  width: 100rpx;
  height: 105rpx;
  margin: 10rpx;
}

.text {
  margin: 10rpx;
  font-size: 28rpx;
  font-style: italic;
  font-weight: bold;
  color: black;
}

.foot{
  padding: 10rpx;
}

.rol{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  border: 2rpx solid black;
  background-color: black;
  margin: 10rpx;
}

.log{
  text-align: left;
  font-size: 36rpx;
  font-style: normal;
  font-weight: bold;
  color: black;
}